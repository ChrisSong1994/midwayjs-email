{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "stripInternal": true,
    "noImplicitReturns": false,
    "strict": false,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "declarationMap": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "sourceMap": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["dist", "node_modules", "test", "site"],
  "noImplicitThis": false
}
